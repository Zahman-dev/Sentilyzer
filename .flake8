[flake8]
# https://flake8.pycqa.org/en/latest/user/configuration.html
max-line-length = 88
extend-ignore = E203, W503
# E203: whitespace before ':' (black's default)
# W503: line break before binary operator (black's default)
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    alembic/
per-file-ignores =
    # __init__.py files are allowed to have unused imports
    __init__.py: F401
max-complexity = 10 